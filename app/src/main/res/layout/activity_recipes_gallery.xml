<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecipesGallery"
    android:background="#F5F6CE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BreakFast"
        android:id="@+id/type"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:scrollIndicators="bottom|end">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:touchscreenBlocksFocus="false"
                android:weightSum="2"
                android:layout_gravity="center">

                <ImageButton android:id="@+id/imgB1"
                    android:layout_column="0"
                    android:src="@drawable/d_1"
                    android:background="#F5F6CE"
                    android:layout_width="wrap_content"
                    android:minWidth="140dp"
                    android:nestedScrollingEnabled="false"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="imgB1OnClick"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgB2"
                    android:src="@drawable/d_1"
                    android:background="#F5F6CE"
                    android:layout_gravity="center"
                    android:minWidth="140dp"
                    android:nestedScrollingEnabled="false"
                    android:layout_weight="1"
                    android:onClick="imgB2OnClick"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/imgTx1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:maxWidth="130dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/imgTx2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:maxWidth="130dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgB3"
                    android:src="@drawable/d_1"
                    android:background="#F5F6CE"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:minWidth="140dp"
                    android:onClick="imgB3OnClick"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgB4"
                    android:src="@drawable/d_1"
                    android:layout_gravity="center"
                    android:background="#F5F6CE"
                    android:layout_weight="1"
                    android:minWidth="140dp"
                    android:nestedScrollingEnabled="false"
                    android:onClick="imgB4OnClick"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/imgTx3"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:maxWidth="130dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/imgTx4"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:maxWidth="130dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:background="#ffff99">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgB5"
                    android:src="@drawable/d_1"
                    android:background="#F5F6CE"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:minWidth="140dp"
                    android:onClick="imgB5OnClick"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgB6"
                    android:background="#F5F6CE"
                    android:layout_gravity="center"
                    android:src="@drawable/d_1"
                    android:textAlignment="center"
                    android:minWidth="140dp"
                    android:layout_weight="1"
                    android:onClick="imgB6OnClick"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Textfsadjasjdklasjd"
                    android:id="@+id/imgTx5"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:maxWidth="130dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/imgTx6"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:maxWidth="130dp" />

            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>
