<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rache.smartrecipes.Customize_Activity"
    android:background="#F5F6CE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:textColor="#000000"
        android:id="@+id/textView8"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imgB1"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:layout_marginTop="36dp"
        android:textColor="#000000"
        android:id="@+id/textView9"
        android:layout_below="@+id/imgB2"
        android:layout_alignStart="@+id/textView8"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgB1"
        android:layout_column="0"
        android:src="@drawable/d_1"
        android:background="#F5F6CE"
        android:layout_width="wrap_content"
        android:minWidth="140dp"
        android:nestedScrollingEnabled="false"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="imgB1OnClick"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgB2"
        android:layout_column="0"
        android:src="@drawable/d_1"
        android:background="#F5F6CE"
        android:layout_width="wrap_content"
        android:minWidth="140dp"
        android:nestedScrollingEnabled="false"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="imgB2OnClick"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/imgB1" />

    <ImageButton
        android:id="@+id/imgB3"
        android:layout_column="0"
        android:src="@drawable/d_1"
        android:background="#F5F6CE"
        android:layout_width="wrap_content"
        android:minWidth="140dp"
        android:nestedScrollingEnabled="false"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="imgB3OnClick"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/imgTx1"
        android:textColor="#000000"
        android:layout_below="@+id/imgB1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/imgTx2"
        android:textColor="#000000"
        android:layout_below="@+id/imgB2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/imgTx3"
        android:textColor="#000000"
        android:layout_below="@+id/imgB3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
